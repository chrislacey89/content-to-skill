	{ id: 2, name: "Terminal", color: "#00ff41" },
	{ id: 3, name: "Aurora", color: "#8b5cf6" },
	{ id: 4, name: "Concrete", color: "#ffe500" },
	{ id: 5, name: "Mu", color: "#c9171e" },
	{ id: 6, name: "Broadsheet", color: "#d4a574" },
	{ id: 7, name: "Topo", color: "#10b981" },
	{ id: 8, name: "Darkroom", color: "#dc2626" },
	{ id: 9, name: "Signal", color: "#06b6d4" },
	{ id: 10, name: "Greenhouse", color: "#84cc16" },
	{ id: 11, name: "Specimen", color: "#e11d48" },
	{ id: 12, name: "Cosmos", color: "#fbbf24" },

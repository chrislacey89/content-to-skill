---

<div
	id="design-picker"
	class="fixed top-0 left-0 right-0 z-[9999] backdrop-blur-xl border-b border-white/10"
	style="background: rgba(9, 9, 11, 0.85);"
>
	<div class="max-w-7xl mx-auto px-4 py-3 flex items-center gap-3">
		<span
			class="text-xs uppercase tracking-[0.2em] text-zinc-500 shrink-0 hidden sm:block"
			style="font-family: 'DM Sans', system-ui, sans-serif;"
		>
			Design
		</span>

		<div class="flex gap-1.5 flex-wrap">
			{
				designs.map((d) => (
					<button
						class="design-btn group relative px-3 py-1.5 rounded-md text-xs font-medium transition-all duration-200 cursor-pointer border border-transparent hover:border-white/20"
						data-design={d.id}
						data-color={d.color}
						style={`font-family: 'DM Sans', system-ui, sans-serif;`}
					>
						<span class="relative z-10 flex items-center gap-1.5">
							<span
								class="w-2 h-2 rounded-full shrink-0 transition-transform duration-200 group-hover:scale-125"
								style={`background: ${d.color};`}
							/>
							<span class="hidden sm:inline">{d.name}</span>
							<span class="sm:hidden">{d.id}</span>
						</span>
					</button>
				))
			}
		</div>

		<div class="ml-auto flex items-center gap-2">
			<a
				href="https://github.com/chrislacey89/content-to-skill"
				target="_blank"
				rel="noopener"
				class="text-zinc-500 hover:text-zinc-300 transition-colors"
				aria-label="View on GitHub"
			>
				<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
					<path
						d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
					/>
				</svg>
			</a>
		</div>
	</div>
</div>

<!-- Spacer for fixed header -->
<div class="h-[52px]"></div>

<script>
	function initPicker() {
		const buttons = document.querySelectorAll(".design-btn");
		const panels = document.querySelectorAll(".design-panel");

		function setActive(id: number) {
			// Update buttons
			buttons.forEach((btn) => {
				const btnId = Number(btn.getAttribute("data-design"));
				if (btnId === id) {
					(btn as HTMLElement).style.background = "rgba(255,255,255,0.1)";
					(btn as HTMLElement).style.borderColor = "rgba(255,255,255,0.2)";
				} else {
					(btn as HTMLElement).style.background = "transparent";
					(btn as HTMLElement).style.borderColor = "transparent";
				}
			});

			// Update panels
			panels.forEach((panel) => {
				const panelId = Number(panel.getAttribute("data-design"));
				if (panelId === id) {
					panel.classList.add("active");
				} else {
					panel.classList.remove("active");
				}
			});

			// Save to localStorage
			localStorage.setItem("activeDesign", String(id));

			// Scroll to top
			window.scrollTo({ top: 0, behavior: "instant" });
		}

		buttons.forEach((btn) => {
			btn.addEventListener("click", () => {
				const id = Number(btn.getAttribute("data-design"));
				setActive(id);
			});
		});

		// Restore saved design or default to 1
		const saved = localStorage.getItem("activeDesign");
		setActive(saved ? Number(saved) : 1);
	}

	// Init on load
	initPicker();
</script>
